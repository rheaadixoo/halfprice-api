   <section class="booking-conrfirmed-section"> 
    <div class="container">
        <div class="row">
            <div class="col-md-5">
              <div class="booking-c-wraper">
                  <i><img src="{{url}}/assets/images/paymentFailed.svg"></i>
                  <h2>Oops! the payment failed.</h2>
                  <p>We were unable to fetch your payment of <span>₹{{amount}}</span> towards<br> your booking! Please try again</p>
                  <p class="transaction-txt">Trsansaction ID : {{transactionToken}} <br>
                    Booking ID : {{orderNumber}} </p>
              </div>
            </div>
            <div class="col-md-7">
               <div class="container">
                <div class="form-inner">
           
                    <form action="{{action}}" method="POST" accept-charset="UTF-8">
        
                     <h2>Try payment again</h2>
                     <div class="flex-div">
                      <span class="custom-select">
                        Total Order Value
                      </span>
                      <span>
                        ₹ {{totalAmount}}
                      </span>
                     </div>
                    
                      <div class="flex-div">
                        <span class="custom-select">
                          Previous Payments
                        </span>
                        <span>
                          ₹ {{paidAmount}}
                        </span>
                      </div>
                      <div class="flex-div last-child">
                        <span class="blue-text">
                          Pay now
                        </span>
                        <span class="blue-text">
                          ₹ {{amount}}
                        </span>
                          <input type="hidden" name="orderNumber" value="{{orderNumber}}">
                          <input type="hidden" name="txnToken" value="{{txnToken}}">
                      </div>
                      <input class="primary-btn" id='formsubmit' type='submit'
                        value='RETRY PAYMENT'></input>
                    </form>
                  </div>
        
              </div> 
            </div>
        </div>
